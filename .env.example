# Server Configuration
DOMAIN=localhost
PORT=8080
AUTH_TOKEN=change-me-to-secure-token
BASE_URL=https://localhost

# Database
DB_URL=postgres://alldl:alldl@db:5432/alldownloads?sslmode=disable

# Redis
REDIS_URL=redis://cache:6379/0

# Worker Configuration
REFRESH_CRON=@every 6h
HTTP_TIMEOUT=15s
MAX_CONCURRENT_FETCHES=6

# Download Configuration
ENABLE_DIRECT_DOWNLOAD=false
STORAGE_BACKEND=local
DOWNLOAD_DIR=/data

# S3/MinIO (if STORAGE_BACKEND=s3)
S3_ENDPOINT=http://minio:9000
S3_BUCKET=downloads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGINS=http://localhost:3000,https://localhost
RATE_LIMIT_REQUESTS_PER_MINUTE=60